{
  "name": "@fe-hub/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.11.0",
  "description": "",
  "author": "aloha66",
  "license": "MIT",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "build": "nr update && esno scripts/build-run.ts",
    "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup --config=rollup.config.ts --configPlugin=rollup-plugin-esbuild",
    "clean": "rimraf --glob dist types \"packages/*/dist\"",
    "dev": "nr update && nr docs",
    "docs": "vitepress dev packages --port 4000",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "publish:ci": "esno scripts/publish.ts --dryrun",
    "taze": "taze -r",
    "test": "vitest",
    "update": "nr -C packages/metadata update && esno scripts/update.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "@antfu/ni": "^0.21.12",
    "@rollup/plugin-json": "^6.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.5",
    "bumpp": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "happy-dom": "^12.10.3",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-pure": "^0.2.1",
    "taze": "^0.13.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-mkcert": "^1.17.1",
    "vitepress": "1.0.0-rc.32",
    "vitest": "^1.0.4",
    "vue": "^3.3.12"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
