{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@fe-hub/core": ["./packages/core/index.ts"],
      "@fe-hub/core/*": ["./packages/core/*"],
      "@fe-hub/vue-composables": ["./packages/vue-composables/index.ts"],
      "@fe-hub/vue-composables/*": ["./packages/vue-composables/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest"
    ],
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "packages",
    "packages/.vitepress/components/*.vue",
    "packages/.vitepress/*.ts",
    "meta",
    "vitest.config.ts"
  ],
  "exclude": [
    "unocss.config.ts",
    "node_modules",
    "**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}
